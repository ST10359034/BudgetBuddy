<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/achievementIconImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/ic_achievement_unlocked" 
        android:contentDescription="@string/achievement_icon_desc" />

    <TextView
        android:id="@+id/achievementNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:layout_constraintStart_toEndOf="@id/achievementIconImageView"
        app:layout_constraintTop_toTopOf="@id/achievementIconImageView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="First Budget Set" />

    <TextView
        android:id="@+id/achievementDescTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        app:layout_constraintStart_toStartOf="@id/achievementNameTextView"
        app:layout_constraintTop_toBottomOf="@id/achievementNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/achievementIconImageView"
        tools:text="You successfully set your first monthly budget!" />

    <!-- Optional: Add progress bar if achievement is progress-based -->

</androidx.constraintlayout.widget.ConstraintLayout> 