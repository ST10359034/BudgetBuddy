<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.fragment.ReportsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title (Could also be set via NavController label) -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reports_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Date Range Selector -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dateRangeButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_range_placeholder" 
            tools:text="January 2025"
            app:icon="@drawable/ic_arrow_down"
            app:iconGravity="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Total Spending Section -->
        <TextView
            android:id="@+id/totalSpendingLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/total_spending_label"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constraintTop_toBottomOf="@id/dateRangeButton"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/totalSpendingAmountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintTop_toBottomOf="@id/totalSpendingLabelTextView"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="$2,458.35" />

        <TextView
            android:id="@+id/spendingChangeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?attr/textAppearanceCaption"
            app:layout_constraintTop_toBottomOf="@id/totalSpendingAmountTextView"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="+ 12.0% from last month" />

        <!-- Spending Breakdown Pie Chart -->
        <TextView
            android:id="@+id/spendingBreakdownLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/spending_by_category_label"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/spendingChangeTextView"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/spendingBreakdownChartImageView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#EEEEEE"
            android:contentDescription="@string/pie_chart_placeholder"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_reports" 
            app:tint="#BDBDBD"
            app:layout_constraintTop_toBottomOf="@id/spendingBreakdownLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Daily Spending Trend Bar Chart -->
        <TextView
            android:id="@+id/dailySpendingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/daily_spending_trend"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/spendingBreakdownChartImageView"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/dailySpendingChartImageView"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="#EEEEEE"
            android:contentDescription="@string/bar_chart_placeholder"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_reports" 
            app:tint="#BDBDBD"
            app:layout_constraintTop_toBottomOf="@id/dailySpendingLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/downloadReportButton" />

        <!-- Download Report Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/downloadReportButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/download_report"
            app:icon="@drawable/ic_download"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView> 